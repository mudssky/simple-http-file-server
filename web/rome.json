{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "files": {
    "ignore": ["./dist/*", "./src/request/deprecated/*", "./.commitlintrc,cjs"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space"
    // "indentSize": 2,
    // "lineWidth": 80,
    // "ignore": []
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      // "all": true,
      "suspicious": {
        "noExplicitAny": "error"
      },
      "style": {
        "useSelfClosingElements": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      }
    }
  }
}
