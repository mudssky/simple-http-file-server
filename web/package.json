{
  "name": "web",
  "private": true,
  "version": "1.2.1",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "proxy:dev": "cross-env VITE_PROXY_TARGET='http://127.0.0.1:7888' vite --host",
    "build": "tsc && vite build",
    "lint": "eslint --cache .",
    "format": "prettier --write --cache .",
    "preview": "vite preview",
    "prepare": "cd .. && husky install web/.husky",
    "rome:check": "rome check .",
    "rome:fix": "rome check --apply .",
    "rome:suggested": "rome check --apply-suggested .",
    "commit": "git add -A && git cz",
    "push": "pnpm commit && git push"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --cache .",
      "rome format --write"
    ],
    "!*.{ts,tsx,js,jsx}": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./web/node_modules/cz-git"
    }
  },
  "dependencies": {
    "@ant-design/icons": "^4.8.0",
    "@reduxjs/toolkit": "^1.9.5",
    "antd": "~5.1.7",
    "aplayer": "^1.10.1",
    "artplayer": "^4.6.2",
    "artplayer-plugin-danmuku": "^4.4.11",
    "axios": "^1.3.6",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.7",
    "lodash-es": "^4.17.21",
    "qrcode.react": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-photo-view": "^1.2.3",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.10.0",
    "react-use": "^17.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/crypto-js": "^4.1.1",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^18.15.12",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "cz-git": "^1.6.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "postcss": "^8.4.23",
    "prettier": "^2.8.7",
    "rome": "^11.0.0",
    "sass": "^1.62.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^4.9.5",
    "vite": "^4.3.0",
    "vite-plugin-svg-icons": "^2.0.1"
  },
  "packageManager": "pnpm@7.18.1"
}
